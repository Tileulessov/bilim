<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson.presentation.LessonActivity"
    android:background="@color/orange_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/activity_lesson_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/MGreyBlue"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_26"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="@dimen/margin_16"
        />
    <TextView
        android:id="@+id/activity_lesson_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginVertical="@dimen/margin_16"/>
    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/activity_lesson_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>