<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginHorizontal="@dimen/margin_28"
    android:layout_marginVertical="@dimen/margin_8"
    android:background="@drawable/bg_course_card"
    >

    <ImageView
        android:id="@+id/course_item_icon_image_view"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="@dimen/margin_32"
        android:src="@drawable/ic_kotlin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/course_item_course_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin"
        android:textAlignment="center"
        android:textColor="#305F72"
        android:textSize="@dimen/text_size_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toEndOf="@+id/course_item_icon_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507"
        />
</androidx.constraintlayout.widget.ConstraintLayout>